<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Background Shape -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#EDEDED" /> <!-- Light Grayish Background Color -->
        </shape>
    </item>

    <!-- Border Shape -->
    <item android:right="4dp" android:left="4dp" android:top="4dp" android:bottom="4dp">
        <shape android:shape="rectangle">
            <solid android:color="#000000" /> <!-- Black Border Color -->
        </shape>
    </item>

    <!-- Content Shape (to add blur effect) -->


</layer-list>
